{
    "extends": [
        "wesbos/typescript.js"
    ],
    "ignorePatterns": [
        "**/build/**/*.js"
    ],
    "rules": {
        "no-console": 1,
        "react/state-in-constructor": [
            1
        ],
        // eslint and typescript sometimes conflict;
        // disable base rule and specify typescript rule as needed
        "no-undef": "off",
        "indent": "off",
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": [
            "error"
        ],
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": [
            "error"
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 120,
                "tabWidth": 4
            }
        ]
    }
}